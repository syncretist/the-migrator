<section>
<% title = "Songs" %>
<h1><%= title %></h1>

<p><a href="/songs/new" id="song-create-new">Create New Song</a></p>

<% if @songs.any? %>
  <ul id='songs-index'>
    <% @songs.each do |song| %>
      <li><a href="/songs/<%= song.id || '::no id::' %>"><%= song.title || '::no title listed::' %></a>
          <form action="/songs/<%= song.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="delete this song">
          </form>
      </li>
    <% end %>
  </ul>
<% else %>
    <p>No songs have been created yet!</p>
<% end %>
</section>